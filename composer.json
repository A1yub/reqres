{
    "name": "a1yub/reqres",
    "description": "A PHP package for retrieving and creating users via the reqres.in API.",
    "homepage": "https://github.com/A1yub/reqres",
    "version": "1.0.0",
    "type": "library",
    "require": {
        "php": "^8.2",
        "saloonphp/saloon": "3.10.0"
    },
    "require-dev": {
        "pestphp/pest": "3.0.6"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Reqres\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "A1yub",
            "email": "ayubbawa@hotmail.co.uk"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
